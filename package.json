{
  "name": "crypto-porfolio",
  "version": "1.0.0",
  "description": "sample crypto portfolio",
  "main": "src/main.ts",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/main.js | bunyan -o short",
    "build": "rm -rf ./dits | tsc",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn src/main.ts | bunyan -o short",
    "compose": "docker compose -f ./docker/compose.yaml -p 'crypto-portfolio-compose' up"
  },
  "author": "Boris Ruskov",
  "license": "ISC",
  "dependencies": {
    "awilix": "^12.0.5",
    "bunyan": "^1.8.15",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "from": "^0.1.7",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.16.0",
    "node-fetch": "^3.3.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.11",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.1",
    "@types/kafkajs": "^1.8.2",
    "@types/mongodb": "^4.0.6",
    "@types/node-fetch": "^2.6.12",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0"
  }
}
